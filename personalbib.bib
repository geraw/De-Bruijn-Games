  author = {B. Gebremichael and F.W. Vaandrager},
  title = {Control Synthesis for a Smart Card Personalization
 System Using Symbolic Model Checking},
  year = {2003},
  booktitle = {Proceedings First International Workshop on Formal
 Modeling and Analysis of Timed Systems (FORMATS 2003),
